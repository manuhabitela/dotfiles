gpo() {
	current_branch=$(git rev-parse --abbrev-ref HEAD)
	git push -u origin $current_branch
}

gcob() {
	git checkout -b $1 origin/$1
}

switch_file() {
	first_file=$1
	second_file=$2
	mv $first_file $first_file.$$
	mv $second_file $first_file
	mv $first_file.$$ $second_file
}

extract() {
	if [ -z "$1" ]; then
		echo "\`extract\` lets you easily extract common archive types"
		echo "Usage: extract archive_file";
		return 1
	fi
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xjf $1     ;;
			*.tar.gz)    tar xzf $1     ;;
			*.bz2)       bunzip2 $1     ;;
			*.rar)       unrar e $1     ;;
			*.gz)        gunzip $1      ;;
			*.tar)       tar xf $1      ;;
			*.tbz2)      tar xjf $1     ;;
			*.tgz)       tar xzf $1     ;;
			*.zip)       unzip $1       ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1        ;;
			*)     echo "'$1' cannot be extracted via extract()" ;;
		esac
	else
		echo "'$1' is not a valid file"
	fi
}

transfer() {
	if [ -z "$1" ]; then
		echo "\`transfer\` helps you upload files on https://transfer.sh";
		echo "Usage: transfer file_to_upload";
		return 1
	fi
	curl --upload-file ./$1 https://transfer.sh/$1;
}

